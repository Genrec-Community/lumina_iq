# Production Environment Configuration
# Copy this file to .env and update with actual values

# Environment
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Authentication (Change these in production!)
LOGIN_USERNAME=admin
LOGIN_PASSWORD=secure_password_here

# AI Service Configuration
GEMINI_API_KEY=your_gemini_api_key_here
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=openai/gpt-4o-mini  # Production model
GEMINI_MODEL=gemini-1.5-pro

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSIONS=1024

# Qdrant Configuration
QDRANT_URL=https://your-qdrant-instance.com
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=learning_app_documents_prod

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_CACHE_DB=0
REDIS_TASK_DB=1

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Performance Settings (Production optimized)
MAX_WORKERS=4
MAX_CONCURRENT_REQUESTS=1000
EMBEDDING_BATCH_SIZE=50
CACHE_EMBEDDINGS=true
CACHE_QUERY_RESULTS=true
CACHE_TTL_SECONDS=7200

# Logging
LOG_LEVEL=INFO

# CORS (Production - restrict to your domain)
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# File Paths
BOOKS_DIR=/app/books
CACHE_DIR=/app/cache

# LlamaIndex Configuration
LLAMAINDEX_CHUNK_SIZE=1024
LLAMAINDEX_CHUNK_OVERLAP=200
LLAMAINDEX_USE_FOR_LARGE_PDFS=true
LLAMAINDEX_LARGE_PDF_THRESHOLD_MB=50

# Session Configuration
SESSION_EXPIRE_HOURS=8