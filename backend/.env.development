# Development Environment Configuration
# Relaxed settings for local development

# Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Authentication (Simple for development)
LOGIN_USERNAME=dev
LOGIN_PASSWORD=dev

# AI Service Configuration (Development/Test keys)
GEMINI_API_KEY=your_dev_gemini_api_key_here
TOGETHER_API_KEY=your_dev_together_api_key_here
TOGETHER_MODEL=openai/gpt-3.5-turbo  # Cost-effective for development
GEMINI_MODEL=gemini-1.5-flash

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSIONS=1024

# Qdrant Configuration (Local or development instance)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=learning_app_documents_dev

# Redis Configuration (Local)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_DB=0
REDIS_TASK_DB=1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Performance Settings (Development - conservative)
MAX_WORKERS=1
MAX_CONCURRENT_REQUESTS=10
EMBEDDING_BATCH_SIZE=5
CACHE_EMBEDDINGS=true
CACHE_QUERY_RESULTS=true
CACHE_TTL_SECONDS=1800

# Logging (Verbose for debugging)
LOG_LEVEL=DEBUG

# CORS (Development - allow localhost)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:3001", "http://127.0.0.1:3001"]

# File Paths (Relative to project root)
BOOKS_DIR=../books
CACHE_DIR=cache

# LlamaIndex Configuration
LLAMAINDEX_CHUNK_SIZE=256
LLAMAINDEX_CHUNK_OVERLAP=50
LLAMAINDEX_USE_FOR_LARGE_PDFS=false
LLAMAINDEX_LARGE_PDF_THRESHOLD_MB=5

# Session Configuration
SESSION_EXPIRE_HOURS=24