# Staging Environment Configuration
# Similar to production but with relaxed security for testing

# Environment
ENVIRONMENT=staging

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Authentication (Staging credentials)
LOGIN_USERNAME=staging_admin
LOGIN_PASSWORD=staging_password

# AI Service Configuration (Can use same or test keys)
GEMINI_API_KEY=your_gemini_api_key_here
TOGETHER_API_KEY=your_together_api_key_here
TOGETHER_MODEL=openai/gpt-3.5-turbo  # Cost-effective for staging
GEMINI_MODEL=gemini-1.5-flash

# Embedding Configuration
EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
EMBEDDING_DIMENSIONS=1024

# Qdrant Configuration
QDRANT_URL=https://your-staging-qdrant-instance.com
QDRANT_API_KEY=your_staging_qdrant_api_key_here
# QDRANT_COLLECTION_NAME is now auto-generated based on ENVIRONMENT
# Staging: lumina_iq_documents_staging

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_CACHE_DB=0
REDIS_TASK_DB=1

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# Performance Settings (Staging optimized)
MAX_WORKERS=2
MAX_CONCURRENT_REQUESTS=500
EMBEDDING_BATCH_SIZE=25
CACHE_EMBEDDINGS=true
CACHE_QUERY_RESULTS=true
CACHE_TTL_SECONDS=3600

# Logging (More verbose for debugging)
LOG_LEVEL=DEBUG

# CORS (Staging - allow specific domains)
# CORS_ORIGINS=["https://staging.yourdomain.com"]

# File Paths
BOOKS_DIR=/app/books
CACHE_DIR=/app/cache

# LlamaIndex Configuration
LLAMAINDEX_CHUNK_SIZE=512
LLAMAINDEX_CHUNK_OVERLAP=100
LLAMAINDEX_USE_FOR_LARGE_PDFS=true
LLAMAINDEX_LARGE_PDF_THRESHOLD_MB=25

# Session Configuration
SESSION_EXPIRE_HOURS=12